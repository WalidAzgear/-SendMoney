<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.azgear.sendmoney.modules.splash.ui.SplashFragment"
        android:label="Splash"
        tools:layout="@layout/fragment_splash">
        
        <action
            android:id="@+id/action_splash_to_login"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.azgear.sendmoney.modules.auth.ui.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        
        <action
            android:id="@+id/action_login_to_main"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    
    <!-- Main App Navigation -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.azgear.sendmoney.modules.home.ui.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        
        <action
            android:id="@+id/action_home_to_sendMoney"
            app:destination="@id/sendMoneyFragment" />
            
        <action
            android:id="@+id/action_home_to_transactions"
            app:destination="@id/transactionsFragment" />
            

    </fragment>

    <fragment
        android:id="@+id/sendMoneyFragment"
        android:name="com.azgear.sendmoney.modules.sendmoney.ui.SendMoneyFragment"
        android:label="Send Money"
        tools:layout="@layout/fragment_send_money">
        
        <action
            android:id="@+id/action_sendMoney_to_confirmation"
            app:destination="@id/confirmationFragment" />
    </fragment>

    <fragment
        android:id="@+id/confirmationFragment"
        android:name="com.azgear.sendmoney.modules.confirmation.ui.ConfirmationFragment"
        android:label="Confirmation"
        tools:layout="@layout/fragment_confirmation">
        
        <argument
            android:name="recipientName"
            app:argType="string" />
        <argument
            android:name="amount"
            app:argType="float" />
        <argument
            android:name="note"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

    <fragment
        android:id="@+id/transactionsFragment"
        android:name="com.azgear.sendmoney.modules.transactions.ui.TransactionsFragment"
        android:label="Transactions"
        tools:layout="@layout/fragment_transactions" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.azgear.sendmoney.modules.profile.ui.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

</navigation>